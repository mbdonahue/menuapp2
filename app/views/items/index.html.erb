<h1>Menu Items</h1>


<div class='row'>

    <% @items.each do |item| %>
      <div class='col-sm-3'>
    <div class='well'>
        <h2><%= item.name %></h2>
        <p><%= image_tag item.avatar.url(:thumb) %></p>


        
        <div class='btn-group'>
        <%= link_to 'Show', item , class: "btn btn-default"%>
        
        <%= link_to 'Edit', edit_item_path(item), class: "btn btn-default"%>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-default"%>
    </div>
  </div>
  </div>
    <% end %>
</div>
<br>

<%= link_to 'New Item', new_item_path %>
